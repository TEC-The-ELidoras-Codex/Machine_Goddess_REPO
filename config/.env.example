# The Elidoras Codex API Configuration
# Copy this file to .env and fill in your API keys

# OpenAI API (Required for Airth)
OPENAI_API_KEY=your_openai_api_key_here

# Additional AI Service APIs
GOOGLE_NEWS_API_KEY=your_google_news_api_key
GEMINI_API_KEY=your_gemini_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# WordPress Configuration
WP_SITE_URL=https://elidorascodex.com
WP_USER=your_wordpress_username
WP_APP_PASS=your_wordpress_application_password

# Backward compatibility with older scripts
WP_URL=https://elidorascodex.com
WP_PASS=your_wordpress_application_password

# Database Configuration
DB_HOST=your_database_host
DB_NAME=tec_memory_core
DB_USER=your_database_username
DB_PASSWORD=your_database_password

# Cloud Storage
GOOGLE_CLOUD_PROJECT=your_google_cloud_project_id
BUCKET_NAME=your_storage_bucket_name

# Local Storage Configuration
LOCAL_STORAGE_DIR=./data/storage

# ClickUp Configuration
CLICKUP_CLIENT_ID=your_clickup_client_id
CLICKUP_CLIENT_SECRET=your_clickup_client_secret
CLICKUP_ACCESS_TOKEN=your_clickup_access_token
CLICKUP_TOKEN=your_clickup_token
CLICKUP_WORKSPACE_ID=your_workspace_id
CLICKUP_CONTENT_LIST_ID=your_content_list_id

# GitHub API (Optional, for automatic secret updates)
GH_PAT=your_github_personal_access_token

# XRPL Configuration (Optional)
XRPL_SEED=your_xrpl_secret_seed

# Email Configuration
EMAIL_SMTP_SERVER=smtp.titan.email
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@elidorascodex.com
EMAIL_PASSWORD=your_email_app_password
EMAIL_FROM=Airth <airth@elidorascodex.com>

# Backward compatibility with older scripts
EMAIL_SMTP_USER=your_email@elidorascodex.com
EMAIL_SMTP_PASS=your_email_app_password
EMAIL_SMTP_HOST=smtp.titan.email

# Automation Settings
CHECK_INTERVAL=300  # 5 minutes in seconds
AUTO_PUBLISH=false
DEBUG_MODE=true