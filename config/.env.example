# The Elidoras Codex API Configuration
# Copy this file to .env and fill in your API keys

# OpenAI API (Required for Airth)
OPENAI_API_KEY=your_openai_api_key_here

# WordPress Configuration
WP_SITE_URL=https://elidorascodex.com
WP_USER=your_wordpress_username
WP_APP_PASS=your_wordpress_application_password

# Local Storage Configuration
LOCAL_STORAGE_DIR=./data/storage

# Optional AI Services
ANTHROPIC_API_KEY=your_anthropic_api_key_optional

# ClickUp Configuration (Optional)
CLICKUP_CLIENT_ID=your_clickup_client_id
CLICKUP_CLIENT_SECRET=your_clickup_client_secret
CLICKUP_ACCESS_TOKEN=your_clickup_access_token

# GitHub API (Optional, for automatic secret updates)
GH_PAT=your_github_personal_access_token

# XRPL Configuration (Optional)
XRPL_SEED=your_xrpl_secret_seed

# Email Configuration (Optional)
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_app_password
EMAIL_FROM=Airth <airth@elidorascodex.com>